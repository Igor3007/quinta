include ../minicard/minicard.pug

mixin new-products(data)
    section.section-new-products
        .container
            .new-products 
                .new-products__title= data.title
                .new-products__slider
                    .splide(data-slider="new-products")
                        .splide__track
                            .splide__list
                                each item in app.slider
                                    .splide__slide: +minicard(item) 
                                each item in app.slider
                                    .splide__slide: +minicard(item) 
                                each item in app.slider
                                    .splide__slide: +minicard(item) 
                .new-products__nav
                    .new-products__nav--prev(data-slider-prev="new-products" disabled): +icons('#ic_prev-slider', 40)
                    .new-products__nav--next(data-slider-next="new-products"): +icons('#ic_next-slider', 40)


            

                 



    

