           span.header__cart-total 26







.header-search
  .header-search-field
    .container
      .header-find
          .header-find__form
            .header-find__input: input(type="text" placeholder="Поиск")
            .header-find__btn: span: +icons('#ic_search')
            .header-find__params(data-find-params="open"): span: +icons('#ic_find-params')

  .header-search-extend(data-find-params="container")
    .container
      .search-extend
        .search-extend__title Расширенный поиск
        .search-extend__form
          form(action='#' method='POST')
            .search-extend__container
              .search-extend__col
                  +hs-extend(search.cat, '2')
                  +hs-extend(search.scale, '3')
                  +hs-extend(search.sale, '3')
              .search-extend__col
