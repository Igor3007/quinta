mixin hs-extend(data, modify)
  .hs-extend
    .hs-extend__name= data.title
    .hs-extend__prop(class="hs-extend__prop--col"+modify)
      ul
        each item in data.prop
          li: +checkbox(item)

.header-top
  .container
    .header
      .header__menu
        .btn-burger(data-menu="btn")
          i
          i
          i
      .header__logo
        a(href='/'): +bgimage('/img/common/svg/logo.svg')
      .header__nav
        .header__nav-container(data-menu="container")
          nav
            ul
              each item in app.mainMenu
                li: a(href=item.href)= item.text
      .header__login
        span: +icons('#ic_user')
      .header__cart
        a(href='#')
