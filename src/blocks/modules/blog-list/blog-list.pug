mixin blog-list
    .blog-list__sort
    .blog-list__row
        each item in blogList
            .blog-list__item: +card-post(item)

mixin card-post(data)
    .card-post
        .card-post__image: +picture(data.image)
        .card-post__main
            .card-post__prop
                .card-post__date= data.date
                .card-post__hits= data.hits
            .card-post__title
                a(href='#')= data.title
            .card-post__desc
                span= data.desc
            .card-post__tags
                ul
                    each li in data.tags
                        li: a(href='#')= li
                       

